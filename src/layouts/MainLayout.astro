---
interface Props {
  title: string;
}

// Supports weights 100-900
import "@fontsource-variable/onest";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="../../src/gw-icon.webp" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="">
      <slot />
    </main>
  </body>
</html>
<style is:global>
  html {
    font-family:
      "Onest Variable",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    /* background: #0a011c; */
    /* background-color: #171717; */
    background-color: #272934;
    /* background: linear-gradient(
      45deg,
      rgba(0, 94, 94, 0.822),
      rgba(60, 1, 78, 0.822),
      rgba(0, 94, 94, 0.822)
    );
    background-repeat: no-repeat;
    background-size: 400% 400%;
    animation: bg-gradient 30s ease-in infinite; */
    color-scheme: dark;
  }
  @keyframes bg-gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  ::-webkit-scrollbar {
    width: 10px;
    background: transparent;
  }

  ::-webkit-scrollbar-thumb {
    background-color: #1a1a23;
  }
</style>
